<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">
    <ImageView
        android:id="@+id/detail_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_img"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/detail_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_title"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/detail_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_address"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        />
    <Button
    android:id="@+id/btnKhachsan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_below="@id/detail_desc"
    android:text="Khách Sạn" />
    <Button
        android:id="@+id/btnNhahang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnKhachsan"
        android:text="Nhà hàng" />

    <Button
        android:id="@+id/btnChiDuongDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/btnNhahang"
        android:text="Chỉ đường" />
</RelativeLayout>